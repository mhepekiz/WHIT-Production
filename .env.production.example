# Production Environment Variables
# Copy this to .env.production on the server

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=staging.whoishiringintech.com,whoishiringintech.com,localhost

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://whit_user:whit_password@db:5432/whit_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Email Settings (Configure as needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# API Configuration
CORS_ALLOWED_ORIGINS=https://staging.whoishiringintech.com

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/